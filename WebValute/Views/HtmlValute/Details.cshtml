@using Entities.JsonDataClasses
@model IReadOnlyList<Valute>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Поиск по id валюты";
    Layout = null;
}

<h2>Искомая валюта</h2>

